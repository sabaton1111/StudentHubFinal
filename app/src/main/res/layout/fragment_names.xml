<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdsolutions.dimitar.studenthub.NamesFragment"
    android:background="@drawable/background_greyv4"
    android:id="@+id/fragment_names">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/firstNameSignUpField"
        android:textColorHint="#c7d0d7"
        android:hint="First Name"
        android:textColor="#c7d0d7"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="140dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/middleNameSignUpField"
        android:textColorHint="#c7d0d7"
        android:hint="Middle Name"
        android:textSize="20sp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#c7d0d7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="195dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/lastNameSignUpField"
        android:textColorHint="#c7d0d7"
        android:textSize="20sp"
        android:background="#fff"
        android:padding="10dp"
        android:hint="Last Name"
        android:textColor="#c7d0d7"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNext3"
        android:width="200dp"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:textColor="#967478"
        android:background="#523336"
        android:textSize="20sp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="175dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What&apos;s your name?"
        android:textStyle="bold"
        android:textColor="#523336"
        android:textSize="24sp"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="90dp" />
</FrameLayout>
