<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="true"
    android:background="#f3f3f3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewTitle"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/imageViewRound"
        android:layout_toEndOf="@+id/imageViewRound"
        android:textColor="#523336"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_alignStart="@+id/textViewTitle"
        android:id="@+id/textViewCreatedDate"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:text="New Text"
        android:id="@+id/editTextContent"
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCreatedDate"
        android:background="#fff"
        android:autoText="false"
        android:singleLine="false"
        android:textColor="#7c7c7c"
        android:textSize="16dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewRound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:src="@drawable/login_background"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#967478"
        android:background="#523336"
        android:id="@+id/buttonSaveEditPost"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextContent" />

</RelativeLayout>