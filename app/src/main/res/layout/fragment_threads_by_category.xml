<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/threads_main_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listViewThreads"
        android:background="@drawable/layout_bg"
        android:layout_alignParentLeft="true"
        android:dividerHeight="1dp"
        android:divider="#2e4954"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCategoryTitle"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="  Category Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23sp"
        android:background="#009688"
        android:textColor="#ffffff"
        android:id="@+id/textViewCategoryTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:gravity="left|center" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/teal"
        android:tint="#ffffff"
        app:fabSize="normal"
        android:scaleType="center"
        app:borderWidth="5dp"
        android:layout_alignBottom="@+id/listViewThreads"
        android:layout_margin="25dp"
        android:baselineAlignBottom="false" />
</RelativeLayout>
