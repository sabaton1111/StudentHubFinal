<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mdsolutions.dimitar.studenthub.ProfileFragment"
    android:background="#523336">


       <ScrollView
           xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:fillViewport="true"
        android:background="@color/teal"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:id="@+id/scrollView2">

    <RelativeLayout android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/form1"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:gravity="center|center_vertical"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f3f3f3"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Profile Picture"
            android:scaleType="fitXY"
            android:id="@+id/imageViewProfilePicture"
            android:background="@drawable/profile_fragment_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Edit"
            android:id="@+id/buttonProfilePicture"
            android:layout_alignBottom="@+id/imageViewProfilePicture"
            android:layout_alignEnd="@+id/imageViewProfilePicture"
            android:background="#930f0e0d"
            android:textColor="#f5f5f5" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageViewProfilePicture"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/textViewNickname"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/textViewEmailProfile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="First Name:"
                android:id="@+id/textViewFirstName"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Middle Name:"
                android:id="@+id/textViewMiddleName"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_below="@+id/textViewFirstName"
                android:layout_alignStart="@+id/textViewFirstName"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Name:"
                android:id="@+id/textViewLastName"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_below="@+id/textViewMiddleName"
                android:layout_alignStart="@+id/textViewMiddleName"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewFirstNameParse"
                android:layout_alignBottom="@+id/textViewFirstName"
                android:layout_alignStart="@+id/textViewMiddleNameParse"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewMiddleNameParse"
                android:layout_alignBottom="@+id/textViewMiddleName"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/textViewLastNameParse"
                android:layout_alignBottom="@+id/textViewLastName"
                android:layout_alignStart="@+id/textViewMiddleNameParse"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email:"
                android:id="@+id/textViewEmailProfile"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textViewLastName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewEmailParse"
                android:layout_alignBottom="@+id/textViewNickname"
                android:layout_toEndOf="@+id/textViewOrganization"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textViewLastNameParse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Organization:"
                android:id="@+id/textViewOrganization"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_alignBaseline="@+id/textViewOrganizationParse"
                android:layout_alignBottom="@+id/textViewOrganizationParse"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewOrganizationParse"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/textViewEmailParse"
                android:layout_alignStart="@+id/textViewEmailParse"
                android:layout_alignParentRight="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/blue"
                android:id="@+id/viewLine4"
                android:layout_below="@+id/textViewOrganizationParse"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Student:"
                android:id="@+id/textViewIsStudent"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:layout_marginLeft="0dp"
                android:layout_alignTop="@+id/viewLine4"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewIsStudentParse"
                android:layout_alignTop="@+id/viewLine4"
                android:layout_alignStart="@+id/textViewOrganizationParse"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Following Lessons:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/textViewFollowingLessons"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textViewIsStudent"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_marginLeft="5dp" />

            <HorizontalScrollView
                android:layout_height="150sp"
                android:layout_width="match_parent"
                android:layout_below="@+id/textViewFollowingLessons"
                android:id="@+id/horizontalScrollView2"
                android:layout_centerHorizontal="true">

            </HorizontalScrollView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView5"
                android:background="@drawable/book_icon"
                android:layout_alignTop="@+id/textViewFollowingLessons"
                android:layout_alignParentStart="true" />

            <GridLayout
                android:layout_height="150sp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:alignmentMode="alignBounds"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageViewNewCourse"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/home_icon"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView1"
                    android:background="@drawable/inquiry_icon"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView2"
                    android:background="@drawable/library_icon"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView"
                    android:textColor="@color/blue"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="18sp"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView2"
                    android:textColor="@color/blue"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView3"
                    android:textColor="@color/blue"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginTop="10dp" />

            </GridLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Personal information"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#523336"
            android:id="@+id/textView7"
            android:layout_below="@+id/buttonProfilePicture"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView4"
            android:background="@drawable/edit_user"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


</ScrollView>

</RelativeLayout>
