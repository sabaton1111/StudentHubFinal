<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_username"
    tools:context="com.mdsolutions.dimitar.studenthub.UsernameFragment"
    android:background="@drawable/login_background">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/usernameSignUpField"
        android:textColorHint="#c7d0d7"
        android:hint="Username"
        android:textSize="20sp"
        android:textColor="#c7d0d7"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNext"
        android:textColor="#c7d0d7"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:width="200dp"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="175dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose your username:"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal|top"
        android:textSize="20sp"
        android:textColor="#c7d0d7"
        android:layout_marginTop="120dp" />
</FrameLayout>
