<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/tasks_shadow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subject"
        android:id="@+id/textViewSubjectLibrary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=">"
        android:textColor="#545454"
        android:id="@+id/textViewGoo"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageViewLessons"
        android:layout_alignParentStart="true"
        android:src="@drawable/lessons1_icon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:tint="@color/teal"
        android:layout_alignTop="@+id/textViewSubjectLibrary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageViewLessons"
        android:layout_toEndOf="@+id/imageViewLessons"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp" />
</RelativeLayout>