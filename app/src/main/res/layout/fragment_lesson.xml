<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitar.studenthub.LessonFragment"
    android:background="#ffffff">
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/textViewTitleLesson"
            android:layout_alignTop="@+id/imageViewLesson"
            android:layout_toEndOf="@+id/imageViewLesson"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/imageViewLesson"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewDescriptionLesson"
            android:layout_below="@+id/textViewTitleLesson"
            android:layout_alignStart="@+id/textViewTitleLesson"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/imageViewLesson" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Video Link"
            android:id="@+id/textView18"
            android:layout_below="@+id/imageViewLesson"
            android:layout_alignStart="@+id/imageViewLesson"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewVideoLinkLesson"
            android:layout_alignTop="@+id/textView18"
            android:layout_toEndOf="@+id/imageViewLesson"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/fragment_youtube_holder"
            android:layout_alignTop="@+id/textViewVideoLinkLesson"
            android:layout_below="@+id/textView18"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="New Text"
            android:id="@+id/textViewMainLesson"
            android:layout_below="@+id/fragment_youtube_holder"
            android:layout_alignStart="@+id/textView18"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Resourced"
            android:id="@+id/textView21"
            android:layout_below="@+id/textViewMainLesson"
            android:layout_alignStart="@+id/textViewMainLesson"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="New Text"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lectors"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="New Text"
            android:id="@+id/textViewLectorsLesson"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView9"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButtonFollow"
            android:layout_alignTop="@+id/textViewTitleLesson"
            android:layout_alignEnd="@+id/textViewDescriptionLesson"
            android:src="@drawable/btn_star_off"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" />
    </RelativeLayout>
</ScrollView>
</FrameLayout>
