<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitar.studenthub.NewPostFragment"
    android:id="@+id/form"
    android:background="#ffffff">
    <TextView
        android:text="  Post Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23sp"
        android:background="#009688"
        android:textColor="#ffffff"
        android:id="@+id/textViewMakeNewThread"
        android:gravity="left|center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:linksClickable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comment"
        android:textSize="22sp"
        android:textColor="@color/blue"
        android:id="@+id/textViewPost"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/textViewMakeNewThread"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewPost"
        android:src="@drawable/pen_icon"
        android:tint="@color/teal"
        android:layout_alignTop="@+id/textViewPost"
        android:layout_marginStart="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextDescription"
        android:gravity="top"
        android:background="#fafafa"
        android:layout_below="@+id/textViewPost"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/editTextDescription"
    android:background="#ffff">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/teal"
        android:tint="#ffffff"
        app:fabSize="normal"
        android:scaleType="center"
        app:borderWidth="5dp"
        android:baselineAlignBottom="false"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp" />
</RelativeLayout>
</RelativeLayout>
