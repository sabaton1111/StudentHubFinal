<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dimitar.studenthub.Login"
    android:background="@drawable/login_background"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logotext_var2"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Explore the world"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#c7d0d7"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColorHint="#c7d0d7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/username1_icon"
        android:gravity="start"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/editText6"
        android:textColorHint="#c7d0d7"
        android:hint="Username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#c7d0d7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/lock_icon"
        android:gravity="start"
        android:inputType="textPassword"
        android:drawablePadding="15dp"
        android:ems="15"
        android:id="@+id/editText7"
        android:textColorHint="#c7d0d7"
        android:hint="Password"
        android:layout_below="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="#c7d0d7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/buttonLogin"
        android:layout_marginTop="46dp"
        android:textColor="#c7d0d7"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:width="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don't have an account yet?"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="#c7d0d7"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/buttonSignUp"
        android:background="@android:color/transparent"
        android:textColor="#90aabf"
        android:textSize="17sp"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />


</RelativeLayout>
