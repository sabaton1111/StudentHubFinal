<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/tasks_shadow"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/imageViewLessonPic"
        android:layout_alignParentTop="true"
        app:siRadius="6dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/login_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lesson Name"
        android:id="@+id/textViewLessonName"
        android:layout_alignTop="@+id/imageViewLessonPic"
        android:layout_toEndOf="@+id/imageViewLessonPic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User"
        android:id="@+id/textViewLectorOfLesson"
        android:layout_below="@+id/textViewLessonName"
        android:layout_alignStart="@+id/textViewLessonName"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dead-Line"
        android:id="@+id/textViewDeadLine"
        android:layout_below="@+id/textViewLectorOfLesson"
        android:layout_alignStart="@+id/textViewLectorOfLesson"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewTasksCalendar"
        android:layout_alignTop="@+id/textViewDeadLine"
        android:layout_toEndOf="@+id/textViewDeadLine"
        android:layout_marginLeft="15dp"
        android:src="@drawable/calendar_icon1"
        android:layout_marginTop="-3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#878787"
        android:id="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/textViewDeadLine"
        android:layout_toEndOf="@+id/imageViewTasksCalendar" />

</RelativeLayout>